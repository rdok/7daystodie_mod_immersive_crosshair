<?xml version="1.0" encoding="utf-8"?>
<ModSettings>
    <Global>
        <Tab name="General">
            <Category name="ImmersiveCrosshair" displayKey="immersiveCrosshairDisplayKey">
                <Selector
                        name="Tools"
                        displayKey="toolDisplayKey"
                        tooltipKey="toolTooltipKey"
                        defaultValue="dynamic"
                >
                    <Property type="arrayValues" allowedValues="off,static,dynamic"/>
                </Selector>
                <Selector
                        name="MeleeWeapons"
                        displayKey="meleeWeaponsDisplayKey"
                        tooltipKey="meleeWeaponsTooltipKey"
                        defaultValue="static"
                >
                    <Property type="arrayValues" allowedValues="off,static,dynamic"/>
                </Selector>
                <Selector
                        name="Bows"
                        displayKey="bowsDisplayKey"
                        defaultValue="static"
                        tooltipKey="bowsTooltipKey"
                >
                    <Property type="arrayValues" allowedValues="off,static"/>
                </Selector>
                <Selector
                        name="RangedWeapons"
                        displayKey="rangedWeaponsDisplayKey"
                        defaultValue="off"
                        tooltipKey="rangedWeaponsTooltipKey"
                >
                    <Property type="arrayValues" allowedValues="off,static"/>
                </Selector>
            </Category>
        </Tab>
    </Global>
</ModSettings>